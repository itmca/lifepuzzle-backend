# Copy this file to .env and update the values
# cp .env.example .env

# ================================
# Infrastructure Deployment Variables
# ================================
# Required for Helm deployment scripts in infra/helm/

# MySQL Configuration for Infrastructure
MYSQL_ROOT_PASSWORD=your-secure-root-password
MYSQL_PASSWORD=your-secure-lifepuzzle-password

# RabbitMQ Configuration for Infrastructure
RABBITMQ_USERNAME=lifepuzzle
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_DEFAULT_VHOST=lifepuzzle
RABBITMQ_ERLANG_COOKIE=your-secure-erlang-cookie

# ================================
# Application Configuration
# ================================
# Database Configuration
# For Docker environment
DB_LOCAL_URL=jdbc:mysql://mysql:3306/lifepuzzle
DB_LOCAL_USERNAME=lifepuzzle
DB_LOCAL_PASSWORD=lifepuzzlepass

# For local development (outside Docker)
DB_LOCAL_DEV_URL=jdbc:mysql://localhost:3306/harmony
DB_LOCAL_DEV_USERNAME=harmony
DB_LOCAL_DEV_PASSWORD=harmony-pw

# Production Database Configuration
DB_PROD_URL=jdbc:mysql://your-prod-server:3306/your-database
DB_PROD_USERNAME=your-prod-username
DB_PROD_PASSWORD=your-prod-password

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# AWS Configuration
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=ap-northeast-2

# Deepgram Configuration
DEEPGRAM_ACCESS_KEY=your-deepgram-access-key

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-url

# Slack Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URI=https://api.openai.com/v1/chat/completions

# Deepgram API Configuration
DEEPGRAM_API_KEY=your-deepgram-api-key
DEEPGRAM_API_URI=https://api.deepgram.com/v1/listen?model=base&smart_format=true&language=ko&punctuate=true&numerals=true

# Apple Authentication Configuration
APPLE_TEAM_ID=your-apple-team-id
APPLE_BUNDLE_ID=io.itmca.lifepuzzle
APPLE_PRIVATE_KEY_ID=your-apple-private-key-id
APPLE_PRIVATE_KEY=your-apple-private-key