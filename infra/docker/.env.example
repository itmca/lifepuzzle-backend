# Copy this file to .env and update the values
# cp .env.example .env

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=lifepuzzle
MYSQL_USER=lifepuzzle
MYSQL_PASSWORD=lifepuzzlepass

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=lifepuzzle
RABBITMQ_DEFAULT_PASS=lifepuzzlepass
RABBITMQ_DEFAULT_VHOST=lifepuzzle

# Application Configuration
DB_HOST=mysql
DB_PORT=3306
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# AWS S3 Configuration (for image-resizer service)
# Get these from your AWS account
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=lifepuzzle-dev

# API Ports
LIFEPUZZLE_API_PORT=8080
IMAGE_RESIZER_PORT=9000